  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    const players = Math.floor(200 + Math.random()*300);
    const queue = Math.floor(Math.random()*30);
    document.getElementById('players').textContent = players;
    document.getElementById('queue').textContent = queue;

    function copyIP(){
      const ip = 'connect metropole.fusiongroup.club';
      navigator.clipboard.writeText(ip).then(()=>{
        const btns = document.querySelectorAll('button');
        btns.forEach(b=>{ if(b.textContent.includes('Copiar IP')){ b.textContent='Copiado!'; setTimeout(()=>b.textContent='Copiar IP',1500);} });
      })
    }
  </script>
